.theme-container {

  .page {
    padding-left: 18rem;
    padding-right: 300px;
  }

  .navbar {
    display: flex;
    align-items: center;
    box-shadow: 0 2px 8px #f0f1f2;
    padding: 0 1.5rem;

    .home-link {
      display: inline-flex;
      align-items: center;
    }

    .site-name {
      display:none;
      color: $accentColor;
      font-weight: 300;
      font-size: 24px;
    }

    .nav-item > .nav-link {
      border-bottom: none !important;

      &::after {
        content: '';
        position: absolute;
        bottom: -12px;
        left: -2px;
        right: -2px;
        height: 2px;
        background-color: transparent;
        border-radius: 1px;
        transition: background-color 0.1s;
      }

      &:hover, &.router-link-active {
        &::after {
          background-color: $accentColor;
        }
      }
    }
  }

  .dropdown-wrapper .nav-dropdown .dropdown-item a {
    padding: 0.4rem 1.5rem 0.4rem 1.25rem;
  }

  .home {
    max-width: unset;

    .hero {
      img {
        max-height: 160px;
      }

      .description {
        max-width: 45rem;
      }
    }
  }

  .sidebar {
    background-color: #sidebarBgColor;

    width: 18rem;
    > .sidebar-links {
      > li:not(:first-child) {
        margin-top: 6px;
      }

      li > a.sidebar-link {
        font-size: unset;
      }
    }

    .sidebar-link {
      border-left: none;

      &.active {
        background-color: $sidebarActiveBgColor;
        border-right: 3px solid $accentColor;
      }
    }

    .sidebar-heading {
      border-left: unset;
      font-size: unset;
      display: flex;
      align-items: center;
      flex-direction: row-reverse;
      justify-content: flex-end;

      .arrow {
        top: 0;
        left: -0.5em;
      }
    }

    .sidebar-heading, .sidebar-link {
      &:hover {
        background-color: #e9e9fc;
        transition: all 0.1s ease;
      }
    }

    .sidebar-sub-headers {
      padding-left: 1.3rem;
    }

    .sidebar-sub-header {
      &::before {
        content: 'â€¢';
        position: absolute;
        left: 2.5rem;
      }

      &:hover {
        &::before {
          color: $accentColor;
        }
      }

      .sidebar-link {
        padding-left: 2.5rem;
        border-right: none;
        background-color: transparent;
      }
    }
  }

  .sidebar-group {
    position: relative;

    &.is-sub-group > {
      .sidebar-heading:not(.clickable) {
        opacity: unset;
      }
      .sidebar-group-items {
        padding-left: 0;
      }
    }

    &.depth-0 {
      a.sidebar-link {
        padding-left: 3rem;
      }
    }

    &.depth-1 {
      .sidebar-heading {
        padding-left: 2.5rem;
      }

      a.sidebar-link {
        padding-left: 4.5rem;
      }
    }

    &.depth-2 {
      .sidebar-heading {
        padding-left: 5rem;
      }

      a.sidebar-link {
        padding-left: 6.5rem;
      }
    }

  }


  .img-title {
    display: block;
    color: #666;
    text-align: center;
  }

  .theme-default-content:not(.custom) {
    text-align: justify;
    width: 100%;
    max-width: 1000px;
    margin: unset;
  }

  div[class*=language-] {
    background-color: #444b58;

    .highlight-lines .highlighted {
      background-color: rgba(0, 0, 0, 0.3);
    }

    code {
      color: #ececec;
    }
  }

  .code-copy {
    height: 0;

    svg {
      right: 40px;
      width: 20px;
      z-index: 2;
    }

    span {
      right: 65px;
      top: 11px !important;
    }
  }

}

@media screen and (min-width: 2000px) {
  .theme-container .theme-default-content:not(.custom) {
    margin: 0 auto;
  }

  .global-ui .side-anchor {
    left: calc(50% + 550px);
  }
}

@media screen and (min-width: 1700px) and (max-width: 2000px) {
  .global-ui .side-anchor {
    left: calc(300px + 5rem + 1000px);
    max-width: 400px;
  }
}

@media screen and (min-width: 1200px) and (max-width: 1700px) {
  .global-ui .side-anchor {
    max-width: 220px;
  }
}

@media screen and (max-width: 1200px) {
  .theme-container {
    .page {
      padding-right: 2.5rem;
    }

    .theme-default-content:not(.custom) {
      width: calc(100% - 2.5rem);
    }
  }

  .global-ui .side-anchor {
    display: none;
  }
}
